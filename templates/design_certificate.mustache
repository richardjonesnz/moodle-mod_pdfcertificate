{{!
    @template mod_pdfcertificate/define_elements
    Moodle renders a certificate image and a list of editable design elements.
    Classes required for JS:
    * elements.js, selectors.js
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * title String a page title.
    * width number canvas width in px.
    * height number canvas height in px.
    Example context (json):
        {
         "title": "My heading",
         "width": "600",
         "height": "600"
        }
}}
<div class="card">
  <h2 class="card-title">{{designname}}</h2>
  <p>{{description}}</p>
  <div class="mod_pdfcertificate_define">
    <div class="mod_pdf_certificate_element_list">
    <h4>{{#str}} elementslist, mod_pdfcertificate {{/ str}}</h4>
    <ul class="list-group">
      {{# elements}}
        <li class="list-group-item" draggable="true"><a href="{{{url}}}" >{{name}}</a></li>
      {{/ elements}}
    </ul>
    </div>
    <canvas id="mod_pdfcertificate_canvas" width="{{width}}" height="{{height}}"></canvas>
  </div>
  <div class="mod_pdfcertificate_toolbox">
        <button data-action="mod_pdfcertificate/clear_button">{{# str}}clear, mod_pdfcertificate{{/ str}}</button>
  </div>
</div>
{{#js}}
    require(['mod_pdfcertificate/design'],
        function(module) {
            module.init('{{{baseimageurl}}}');
        }
    );
{{/js}}