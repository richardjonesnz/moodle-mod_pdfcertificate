{{!
    @template mod_pdfcertificate/manage_designs
    Update list of designs available to be added to a certificate template.

    Context variables required for this template:

    Example context (json):
    {
        "caption": {
          "caption": "This table"
        }
        "table": {
          "tableheaders": ["header 1", "header2", ...]
          "tabledata": [ ["item1, item2, ..."], ["item1, item2, ..."] ]
        }
    }
}}
{{> mod_pdfcertificate/navtabs}}

<h3>{{#str}}designstab, mod_pdfcertificate{{/str}}</h3>
<p>{{caption}}</p>
<div class="table-responsive">
<table class="table table-striped table-sm">
    <thead>
      {{#headers}}
          <th>{{.}}</th>
      {{/headers}}
    </thead>
    <tbody>
      {{#tabledata}}
        {{> mod_pdfcertificate/design_row}}
      {{/tabledata}}
    </tbody>
</table>
<a href="{{{add_design}}}"button type="button" class="btn btn-primary btn-sm">
           {{#str}}adddesign, mod_pdfcertificate{{/str}}</a>
