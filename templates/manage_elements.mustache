{{!
    @template mod_pdfcertificate/manage_elements
    Update list of elements available to be added to a certificate template.

    Context variables required for this template:

    Example context (json):
    {
        "caption": {
          "caption": "This table"
        }
        "table": {
          "tableheaders": ["header 1", "header2", ...]
          "tabledata": [ ["item1, item2, ..."], ["item1, item2, ..."] ]
        }
    }
}}
<div class="container">
<ul class="nav nav-tabs">
    <li class="nav-item"><a class="nav-link" href="{{viewurl}}">
        {{# str }} viewtab, mod_pdfcertificate {{/ str }}</a></li>
    <li class="nav-item"><a class="nav-link" href="{{templatesurl}}">
        {{# str }} templatestab, mod_pdfcertificate {{/ str }}</a></li>
    <li class="nav-item"><a class="nav-link active" href="{{elementsurl}}">
        {{# str }} elementstab, mod_pdfcertificate {{/ str }}</a></li>
  </ul>

</div>

<h3>{{#str}}elementstab, mod_pdfcertificate{{/str}}</h3>
<p>{{caption}}</p>
<div class="table-responsive">
<table class="table table-striped table-sm">
    <thead>
      {{#headers}}
          <th>{{.}}</th>
      {{/headers}}
    </thead>
    <tbody>
      {{#tabledata}}
        {{> mod_pdfcertificate/element_row}}
      {{/tabledata}}
    </tbody>
</table>
<a href="{{{add_element}}}"button type="button" class="btn btn-primary btn-sm">
           {{#str}}addelement, mod_pdfcertificate{{/str}}</a>
